root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{lua,toml}]
indent_style = space
indent_size = 4

[*.{sh,zsh}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.{json,md}]
indent_style = space
indent_size = 2

[*.ini]
indent_style = space
indent_size = 4