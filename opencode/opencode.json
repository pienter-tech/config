{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "autoshare": false,
  "autoupdate": true,
  "model": "anthropic/claude-sonnet-4-20250514",
  "permission": {
    "edit": "ask",
    "bash": {
      "git status": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "git add *": "allow",
      "git diff": "allow",
      "ls": "allow",
      "pwd": "allow",
      "*": "ask"
    }
  },
  "provider": {
    "openai": {
      "options": {
        "apiKey": "{env:OPENAI_API_KEY}"
      },
      "models": {}
    },
    "google": {
      "options": {
        "apiKey": "{env:GEMINI_API_KEY}"
      },
      "models": {}
    }
  }
}
