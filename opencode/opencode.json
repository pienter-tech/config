{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "autoshare": false,
  "autoupdate": true,
  "model": "anthropic/claude-sonnet-4-20250514",
  "permission": {
    "edit": "ask",
    "bash": {
      "git status": "allow",
      "git diff*": "allow",
      "git log *": "allow",
      "git add *": "allow",
      "git show *": "allow",
      "git tag --list *": "allow",
      "git ls-files *": "allow",
      "grep *": "allow",
      "tail *": "allow",
      "ls *": "allow",
      "pwd": "allow",
      "head *": "allow",
      "cd *": "allow",
      "*": "ask"
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    }
  },
  "provider": {
    "openai": {
      "options": {
        "apiKey": "{env:OPENAI_API_KEY}"
      },
      "models": {}
    },
    "google": {
      "options": {
        "apiKey": "{env:GEMINI_API_KEY}"
      },
      "models": {}
    }
  }
}
