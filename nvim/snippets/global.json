{
  "prettierrc": {
    "prefix": "prettierrc",
    "description": "Prettier configuration file",
    "body": [
      "// .prettierrc.mjs",
      "/** @type {import(\"prettier\").Config} */",
      "export default {",
      "    trailingComma: 'all',",
      "    tabWidth: 4,",
      "    semi: true,",
      "    singleQuote: true,",
      "    overrides: [",
      "        {",
      "            files: ['*.json', '*.yml', '*.yaml'],",
      "            options: {",
      "                tabWidth: 2,",
      "            },",
      "        },",
      "    ],",
      "};"
    ]
  },
  "prettierrc-php": {
    "prefix": "prettierrc-php",
    "description": "Prettier configuration file with PHP plugin",
    "body": [
      "// .prettierrc.mjs",
      "/** @type {import(\"prettier\").Config} */",
      "export default {",
      "    plugins: ['@prettier/plugin-php'],",
      "    trailingComma: 'all',",
      "    tabWidth: 4,",
      "    semi: true,",
      "    singleQuote: true,",
      "    overrides: [",
      "        {",
      "            files: ['*.json', '*.yml', '*.yaml'],",
      "            options: {",
      "                tabWidth: 2,",
      "            },",
      "        },",
      "    ],",
      "};"
    ]
  },
  "prettierrc-twig-php": {
    "prefix": "prettierrc-twig-php",
    "description": "Prettier configuration file with Twig and PHP plugins",
    "body": [
      "// .prettierrc.mjs",
      "/** @type {import(\"prettier\").Config} */",
      "export default {",
      "    plugins: ['@zackad/prettier-plugin-twig', '@prettier/plugin-php'],",
      "    trailingComma: 'all',",
      "    tabWidth: 4,",
      "    semi: true,",
      "    singleQuote: true,",
      "    overrides: [",
      "        {",
      "            files: ['*.json', '*.yml', '*.yaml'],",
      "            options: {",
      "                tabWidth: 2,",
      "            },",
      "        },",
      "    ],",
      "};"
    ]
  },
  "editorconfig": {
    "prefix": "editorconfig",
    "description": "EditorConfig configuration file",
    "body": [
      "root = true",
      "",
      "[*]",
      "charset = utf-8",
      "end_of_line = lf",
      "insert_final_newline = true",
      "indent_style = space",
      "indent_size = 4",
      "",
      "[*.{json,yml}]",
      "indent_size = 2"
    ]
  }
}
